<div class = "container text-center">
<h1 class = "text-center text-white mt-4"><%= @user.username %>'s Profile</h1>


<p><%= image_tag(@user.image,class:"rounded-circle", style:"height:170px; width:13%;") %></p>
<% if logged_in? && @user == current_user %>
  <div class="text-center mt-4">
    <%= link_to "Edit Your Profile" , edit_user_path(@user.id) , class: "btn btn-dark" %>
  </div>
<% end %>


  <br>
  <h5>
    <strong>Email:</strong>
    <%= @user.email %>
  </h5>

<h3 class = "text-center mt-4"><%= @user.username %>'s Articles</h3>

<%= render "articles/article" %>

<div class="flickr_pagination mb-4">
  <%= will_paginate @articles , :container => false %>
</div>
</div>